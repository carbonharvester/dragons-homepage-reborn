{
  "name": "kapes-video-ads",
  "version": "1.0.0",
  "description": "Remotion video ads for Kapes Adventures",
  "scripts": {
    "start": "npx remotion studio",
    "build:mirror": "npx remotion render KapesMirrorTestAd out/mirror-test-ad.mp4",
    "build:mirror:vertical": "npx remotion render KapesMirrorTestAdVertical out/mirror-test-ad-vertical.mp4",
    "build:anti-vol": "npx remotion render KapesAntiVoluntourismAd out/anti-voluntourism-ad.mp4",
    "build:anti-vol:vertical": "npx remotion render KapesAntiVoluntourismAdVertical out/anti-voluntourism-ad-vertical.mp4",
    "build:all": "npm run build:mirror && npm run build:mirror:vertical && npm run build:anti-vol && npm run build:anti-vol:vertical"
  },
  "dependencies": {
    "@remotion/animation-utils": "^4.0.425",
    "@remotion/cli": "^4.0.0",
    "@remotion/motion-blur": "^4.0.425",
    "@remotion/noise": "^4.0.425",
    "@remotion/player": "^4.0.0",
    "@remotion/transitions": "^4.0.425",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remotion": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.3.0"
  }
}
